<?xml version="1.0" encoding="utf-8"?>
<!--Matric No: S1315451-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/scotlandbg">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="TRAFFIC SCOTLAND ROADWORKS AND INCIDENT REPORTS"
        android:backgroundTint="@color/White"
        android:textSize="15sp"
        android:textColor="@color/Black"
        android:gravity="center"
        android:shadowColor="@color/Black"
        android:shadowRadius="1.5"
        android:background="@drawable/round_rect"
        android:alpha="0.75"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/currentIncidents"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:drawableRight="@drawable/error_icon"
        android:text="View All Current Incidents"
        android:textColor="@color/Black"
        android:backgroundTint="@color/White"
        android:alpha="0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/plannedRoadworks"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:drawableRight="@drawable/car_icon"
        android:text="View All Planned Roadworks"
        android:textColor="@color/Black"
        android:backgroundTint="@color/White"
        android:alpha="0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matric No: S1315451"
        android:textColor="@color/White"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="519dp" />

</android.support.constraint.ConstraintLayout>

