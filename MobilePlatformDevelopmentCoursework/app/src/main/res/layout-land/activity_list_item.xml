<?xml version="1.0" encoding="utf-8"?>
<!--Matric No: S1315451-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="580dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="top"
        android:text=""
        android:textColor="@color/Black"
        android:textSize="18dp"
        tools:layout_editor_absoluteY="3dp"
        tools:layout_editor_absoluteX="11dp" />

    <TextView
        android:id="@+id/itemLink"
        android:layout_width="248dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/Black"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="11dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/itemDescription" />


    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text=""
        android:textColor="@color/Black"
        app:layout_constraintTop_toBottomOf="@+id/itemTitle"
        tools:layout_conversion_absoluteHeight="115dp"
        tools:layout_conversion_absoluteWidth="271dp"
        tools:layout_conversion_absoluteX="25dp"
        tools:layout_conversion_absoluteY="53dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/itemDays"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text=""
        android:textColor="@color/Black"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/itemLink"
        app:layout_constraintTop_toBottomOf="@+id/itemDescription"
        tools:layout_conversion_absoluteHeight="43dp"
        tools:layout_conversion_absoluteWidth="48dp"
        tools:layout_conversion_absoluteX="311dp"
        tools:layout_conversion_absoluteY="49dp" />


</android.support.constraint.ConstraintLayout>